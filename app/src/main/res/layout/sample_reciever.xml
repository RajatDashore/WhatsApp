<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_50sdp"
    android:background="@drawable/bg_reciever"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/RecievedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:minWidth="@dimen/_60sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/TimeStampReciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RecievedMessage"
        android:layout_alignEnd="@id/RecievedMessage"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/recieverReaction"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_alignLeft="@id/TimeStampReciever"
        android:layout_alignBottom="@id/TimeStampReciever"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/emozy_sad"
        android:visibility="gone" />

</RelativeLayout>